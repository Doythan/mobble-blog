            <!--                        <span>👍 57</span>-->
            <!--                    </div>-->
            <!--                </div>-->
            <!--            </a>-->
            <!--        </article>-->

            <!-- 페이징 -->
            <div class="pagination">
                {{#pageDTO}}
                    {{^isFirst}}
                        <a href="/boards{{queryString}}&page={{prev}}">&lt;prev</a>
                    {{/isFirst}}
                    {{^isLast}}
                        <a href="/boards{{queryString}}&page={{next}}">next&gt;</a>
                    {{/isLast}}
                {{/pageDTO}}
            </div>
        </section>

        <!-- 우측 인기글 -->

        <aside class="feed-right">
            <h3>인기글</h3>
            <ul class="popular-list">
                {{#popularList}}
                    <li class="popular-item">
                        <a class="popular-link" href="/boards/{{id}}">
                            <div class="thumb small" aria-hidden="true">
                                {{#image}}<img src="{{image}}" alt="thumbnail"/>{{/image}}
                            </div>
                            <div class="info">
                                <span class="author">{{username}}</span>
                                <h4 class="title">{{title}}</h4>
                                <p class="excerpt">
                                </p>
                                <div class="meta">
                                    <span>{{createAt}}</span>
                                    <span>💬 {{views}}</span>
                                    <span>👍 {{bookmarkCount}}</span>
                                </div>
                            </div>
                        </a>
                    </li>

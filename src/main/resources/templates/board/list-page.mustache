<body>
<!-- 헤더 -->
{{> layout/header}}

{{> layout/sidebar}}

<script src="/js/sidebar.js" defer></script>

<!-- 푸터 -->
{{> layout/footer}}

<script src="/js/search-clear.js" defer></script>
<script src="/js/footer.js" defer></script>
<main class="feed-container">
    {{#model}}
        <!-- 좌측 피드 -->
        <section class="feed-left">
            <h2>피드</h2>
            <h3>HOT TOPIC</h3>
            <div class="feed-sorting">
                <a href="/boards?order=CREATED_AT_DESC&page=1">최신순</a> | <a
                    href="/boards?order=VIEW_COUNT_DESC&page=1">조회수순</a>
                | <a
                    href="/boards?order=BOOKMARK_COUNT_DESC&page=1">북마크순</a>
            </div>

            <!-- 글 카드 1 -->
            {{#boardList}}
                <article class="post-card">
                    <a class="post-link" href="/boards/{{id}}">
                        <div class="thumb" aria-hidden="true">
                            {{#image}}<img src="{{image}}" alt="thumbnail"/>{{/image}}
                        </div>
                        <div class="post-body">
                            <div class="tags">#{{category}}</div>
                            <h4 class="title">{{title}}</h4>
                            <div class="tags">{{username}}</div>
                            <p class="excerpt">
                                {{content}}
                            </p>
                            <div class="meta">
                                <span>{{createAt}}</span>
                                <span>💬 {{views}}</span>
                                <span>👍 {{bookmarkCount}}</span>
                            </div>
                        </div>
                    </a>
                </article>
            {{/boardList}}
